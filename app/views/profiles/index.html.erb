<% provide(:title, "Profile") %>
<!DOCTYPE html>
<html X-Frame-Options: SAMEORIGIN>
  <head>
    <title><%= yield(:title) %> |</title>
  </head>

  <body>

    <p id="notice"><%= notice %></p>

    <h1>The best translation platform!</h1>
    <div class="row">
      <div class="spacer"></div>
        <div class="col-md-4">
          <div class="panel panel-default">
            <div class="panel-body">
              <%= link_to 'New profile', new_profile_path, class: "btn btn-sm btn-success" %>
              <div class="spacer"></div><br />
              <p class="phrase">Here you can view your user profile!</p>
            </div>
          </div>
        </div>
        <div class="col-md-8">
          <div class="panel panel-default">
            <div class="panel-body">
              <div class="prop_index">
                <% @profiles.each do |profile| %>
                <div class="indivprop">
                  <p<strong>Name: </strong><%= profile.name %></p>
                  <p><strong>Alias: </strong><%= profile.alias %></p>
                  <p><strong>Email: </strong><%= profile.alias %></p>
                  <p><strong>User id: </strong><%= profile.userid %></p>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <br />

  </body>
</html>
